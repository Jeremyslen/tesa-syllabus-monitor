# ==========================================
# TESA SYLLABUS MONITOR - Plantilla
# ==========================================
# INSTRUCCIONES:
# 1. Copia este archivo como ".env"
# 2. Reemplaza los valores con los REALES
# 3. NUNCA subas el archivo .env a Git
# ==========================================

# APLICACIÓN
DEBUG_MODE=false
BASE_URL=https://tu-app.azurewebsites.net

# OAUTH BRIGHTSPACE
OAUTH_CLIENT_ID=tu_client_id_real
OAUTH_CLIENT_SECRET=tu_client_secret_real
OAUTH_REDIRECT_URI=https://tu-app.azurewebsites.net/auth/callback
OAUTH_AUTH_URL=https://auth.brightspace.com/oauth2/auth
OAUTH_TOKEN_URL=https://auth.brightspace.com/core/connect/token
OAUTH_SCOPE=content:modules:read content:toc:read core:*:* enrollment:orgunit:read grades:gradeobjects:read grades:grades:read

# API BRIGHTSPACE
API_BASE_URL=https://tesa.brightspace.com
API_VERSION=1.43
API_TIMEOUT=300
API_MAX_RETRIES=3

# BASE DE DATOS (Azure)
DB_HOST=tu-servidor-mysql.mysql.database.azure.com
DB_PORT=3306
DB_DATABASE=tesa_syllabus_monitor
DB_USERNAME=tu_usuario_db
DB_PASSWORD=tu_password_seguro_db

# CACHÉ
CACHE_ENABLED=true
CACHE_DURATION_HOURS=6
CACHE_AUTO_UPDATE=true

# LOGGING
LOG_ENABLED=true
LOG_LEVEL=ERROR